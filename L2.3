
AmperkaFET pFET; // Объект для управления P-FET
AmperkaFET nFET; // Объект для управления N-FET

void setup() {
  Serial.begin(9600);
  pFET.begin();
  nFET.begin();
}

void loop() {
  if (Serial.available() > 0) {
    char command = Serial.read();
    
    if (command == 'P' || command == 'p') {
      pFET.on();
      Serial.println("P-FET is turned on.");
    } else if (command == 'N' || command == 'n') {
      nFET.on();
      Serial.println("N-FET is turned on.");
    } else if (command == 'O' || command == 'o') {
      pFET.off();
      nFET.off();
      Serial.println("Both FETs are turned off.");
    } else {
      Serial.println("Invalid command. Enter 'P', 'N', or 'O'.");
    }
  }
}
