#include <Servo.h>

Servo servo; // Объект для управления сервоприводом

const int potPin = A0; // Пин, к которому подключен потенциометр

void setup() {
  servo.attach(9); // Пин для управления сервоприводом (D9)
}

void loop() {
  int potValue = analogRead(potPin); // Считываем значение с потенциометра (0-1023)
  
  int angle = map(potValue, 0, 1023, 0, 180); // Преобразуем значение в угол (0-180 градусов)
  
  servo.write(angle); // Устанавливаем угол поворота сервопривода
  
  delay(15); // Небольшая задержка для стабилизации положения
}
